@model App.Data.Entities.UserEntity

@{
    ViewBag.Title = "Profilim";
}

<h2>Profil Bilgilerim</h2>

<table class="table table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Rol</th>
        <td>@Model.Role?.Name</td>
    </tr>
    <tr>
        <th>Hesap Oluşturma Tarihi</th>
        <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
    </tr>
</table>
